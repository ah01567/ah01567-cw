<!-- localised string refering to the department title -->
<h1><mark><%= t('.department') %></mark></h1><br><br>
<!-- localised string refering to the departments index page paragraph1 -->
<p class = "free"> <mark> <%= t('.department_list') %> </mark></p><br>
<!-- localised string refering to the departments index page paragraph2 -->
<p class = "free"> <mark> <%= t('.add_uni_first') %> </mark></p>
<!-- Create a DB table holding departments name for each uni -->
<table id="DBtable">
  <thead>
    <tr>
      <th>Uni</th>
      <th>Department</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>
  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.uni.name %></td>
        <td><%= department.name %></td>
        <td><%= link_to 'Show', department %></td>
        <td><%= link_to 'Edit', edit_department_path(department) %></td>
        <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

